<h1>New Equipment</h1>

<%= form_for (@equipment), url: equipments_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :max_class %><br>
      <%= f.text_field :max_class %>
    </p>
    <p>
      <%= f.label :desc %><br>
      <%= f.text_area :desc %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>